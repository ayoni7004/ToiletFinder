<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xnote.toiletfinder.ga"
    android:background="@drawable/ga">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배변을 해야만 증상이 완화된다."
        android:id="@+id/radioButton2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="117dp"
        android:onClick="onRadioButtonClicked2"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="증상과 함께 배변 횟수의 변화가 있다."
        android:id="@+id/radioButton11"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentStart="true"
        android:onClick="onRadioButtonClicked2"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="증상과 함께 배변 형태와 굳기의 변화가 있다."
        android:id="@+id/radioButton12"
        android:layout_below="@+id/radioButton11"
        android:layout_alignParentStart="true"
        android:onClick="onRadioButtonClicked2"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스트레스를 받으면 배가 아프다."
        android:id="@+id/radioButton13"
        android:layout_below="@+id/radioButton12"
        android:layout_alignParentStart="true"
        android:onClick="onRadioButtonClicked2"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스트레스를 해소하는 방법이 없다."
        android:id="@+id/radioButton14"
        android:layout_below="@+id/radioButton13"
        android:layout_alignParentStart="true"
        android:onClick="onRadioButtonClicked2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="2개 이상 해당 된다면 과민성 대장증후군 의심해봐야합니다."
        android:layout_marginTop="72dp"
        android:textColor="#fd0303"
        android:layout_below="@+id/radioButton14"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
